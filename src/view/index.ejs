<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs')%>

<body>
    <%- include('../partials/nav.ejs')%>
    <div class="blogs content">
        <% if (blogs.length > 0) { %>
        <% blogs.map(blog => {%>
        <a href="/blogs/<%=blog._id%>">
            <h3><%=blog.title%></h3>
            <p><%=blog.snipped%></p>
        </a>
        <%})%>
        <%} else {%>
        <p> There are no blogs to display...</p>
        <%}%>   
       %>
    </div>
    <%- include('../partials/footer.ejs')%>

</body>

</html>